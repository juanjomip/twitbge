<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.erm.erm_debug.GPS">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ERM-App Prototype 0.5 by Juan Ulloa."
        android:id="@+id/textView" />


    <TextView
        android:id="@+id/switch_label"
        android:text="Activar/Desactivar Captura."
        android:layout_width="100pt"
        android:layout_height="10pt"

        android:layout_alignBaseline="@+id/switch_ubicacion"
        android:layout_alignBottom="@+id/switch_ubicacion"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/switch_ubicacion"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:layout_below="@+id/switch_ubicacion"
        android:text="latitud"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lng"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:text="longitud"
        android:layout_below="@+id/lat"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:text="fecha y hora"
        android:layout_below="@+id/lng"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/proveedor"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:layout_below="@+id/datetime"
        android:text="proveedor"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/locationsSize"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:text="location size"
        android:layout_below="@+id/proveedor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/SamplesSize"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:text="samples size"
        android:layout_below="@+id/locationsSize"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/MatchedSize"
        android:text="matched size"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:layout_below="@+id/SamplesSize"
        android:layout_alignParentStart="true" />

</RelativeLayout>
